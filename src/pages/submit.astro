<style>
	main {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem;
		min-height: calc(100vh - 200px);
	}

	h1 {
		font-size: 2rem;
		margin-bottom: 2rem;
		color: var(--accent);
		text-transform: lowercase;
	}

	.content {
		font-size: 0.9rem;
		line-height: 1.6;
		color: var(--text);
	}

	section {
		margin-bottom: 2.5rem;
	}

	h2 {
		color: var(--accent);
		font-size: 1.2rem;
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	h2::before {
		content: '>';
		color: var(--accent);
		font-family: monospace;
	}

	p {
		margin-bottom: 1rem;
		opacity: 0.9;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0;
	}

	li {
		margin-bottom: 0.5rem;
		padding-left: 1.5rem;
		position: relative;
		opacity: 0.9;
	}

	li::before {
		content: '>';
		position: absolute;
		left: 0;
		color: var(--accent);
		font-family: monospace;
	}

	.pgp-key {
		background: var(--secondary);
		padding: 1rem;
		border: 1px solid var(--accent);
		font-family: monospace;
		font-size: 0.8rem;
		overflow-x: auto;
		margin: 1rem 0;
		white-space: pre-wrap;
		word-wrap: break-word;
	}

	.key-fingerprint {
		font-family: monospace;
		color: var(--accent);
		font-size: 0.8rem;
		margin-top: 0.5rem;
	}

	.signal-number {
		font-family: monospace;
		color: var(--accent);
		font-size: 1rem;
		margin: 1rem 0;
		padding: 0.5rem;
		background: var(--secondary);
		border: 1px solid var(--accent);
		display: inline-block;
	}

	.note {
		font-size: 0.8rem;
		opacity: 0.7;
		font-style: italic;
	}

	.contact-link {
		color: var(--accent);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.contact-link:hover {
		text-shadow: 0 0 8px var(--accent);
	}

	.warning {
		color: var(--danger);
		font-weight: bold;
		margin: 1rem 0;
	}

	.app-buttons, .provider-buttons {
		display: flex;
		gap: 1rem;
		margin: 1rem 0;
		flex-wrap: wrap;
	}

	.app-btn, .provider-btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--secondary);
		border: 1px solid var(--accent);
		color: var(--accent);
		text-decoration: none;
		font-family: 'Space Mono', monospace;
		font-size: 0.9rem;
		transition: all 0.3s ease;
		width: auto;
		min-width: 200px;
	}

	.app-btn:hover, .provider-btn:hover {
		background: var(--accent);
		color: var(--background);
		box-shadow: 0 0 15px var(--accent);
	}

	.secure-email-providers {
		margin: 1.5rem 0;
	}

	.provider-btn svg, .app-btn svg {
		width: 16px;
		height: 16px;
		flex-shrink: 0;
	}

	@media (max-width: 768px) {
		main {
			padding: 1.5rem;
			margin-bottom: 4rem;
		}

		h1 {
			font-size: 1.8rem;
			margin-bottom: 1.5rem;
		}

		h2 {
			font-size: 1.1rem;
		}

		.app-buttons, .provider-buttons {
			flex-direction: column;
			gap: 0.75rem;
		}

		.app-btn, .provider-btn {
			width: 100%;
			justify-content: flex-start;
		}

		.pgp-key {
			font-size: 0.7rem;
			padding: 0.75rem;
		}

		.signal-number {
			font-size: 0.9rem;
			padding: 0.4rem;
		}

		section {
			margin-bottom: 2rem;
			padding-bottom: 1rem;
		}

		.content {
			padding-bottom: 2rem;
		}
	}
</style>