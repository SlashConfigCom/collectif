---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.astro';

const articles = [
	{
		title: "BREAKING: $150M Protocol Breach",
		date: "2024-01-15",
		excerpt: "Exclusive analysis of the latest DeFi protocol exploit. Internal documents reveal critical vulnerabilities.",
		href: "/articles/protocol-heist",
		image: "/images/cyber-heist.webp",
		category: "Breaking"
	},
	{
		title: "The Surveillance State of Web3",
		date: "2024-01-12",
		excerpt: "Investigation: How 'decentralized' protocols are tracking your every move.",
		href: "/articles/surveillance-state",
		image: "/images/surveillance.webp",
		category: "Privacy"
	},
	{
		title: "Whistleblower: Inside a VC Rug Pull",
		date: "2024-01-10",
		excerpt: "Anonymous insider exposes the orchestrated collapse of a major DeFi protocol.",
		href: "/articles/vc-rugpull",
		image: "/images/rugpull.webp",
		category: "Whistleblower"
	}
];
---

<Layout title="collectif | Underground Web3 Intel">
	<main>
		<section class="hero">
			<div class="masthead">
				<div class="date-line">
					<span class="date">[TRANSMISSION_DATE: 2024.01.15]</span>
					<span class="edition">ENCRYPTED_BROADCAST</span>
				</div>
				<div class="title-wrapper">
					<h1 class="site-title">collectif_</h1>
					<div class="interference-line"></div>
				</div>
				<div class="tagline">
					<span class="line">The truth cannot be silenced.</span>
					<span class="separator">//</span>
					<span class="line">Independent Web3 Intelligence</span>
				</div>
			</div>
			<p class="subtitle">Exposing corruption. Preserving anonymity. Breaking silence.</p>
		</section>
		
		<section class="articles">
			{articles.map(article => (
				<ArticleCard {...article} />
			))}
		</section>
	</main>
</Layout>

<style>
	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}

	.hero {
		text-align: center;
		margin: 4rem 0 6rem;
		position: relative;
		border-bottom: 1px solid var(--accent);
		padding-bottom: 3rem;
		background: linear-gradient(180deg, 
			rgba(0,255,102,0.03) 0%,
			rgba(0,255,102,0) 100%
		);
	}

	.masthead {
		position: relative;
	}

	.date-line {
		font-family: 'Space Mono', monospace;
		color: var(--accent);
		font-size: 0.9rem;
		margin-bottom: 1.5rem;
		display: flex;
		justify-content: center;
		gap: 2rem;
		opacity: 0.8;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.edition {
		letter-spacing: 2px;
		position: relative;
		padding: 0 8px;
	}

	.edition::before, .edition::after {
		content: '';
		position: absolute;
		top: 50%;
		width: 4px;
		height: 1px;
		background: var(--accent);
	}

	.edition::before {
		left: 0;
	}

	.edition::after {
		right: 0;
	}

	.title-wrapper {
		position: relative;
		margin: 2rem 0;
		padding: 1rem 0;
	}

	.interference-line {
		position: absolute;
		left: 0;
		right: 0;
		top: 50%;
		height: 1px;
		background: var(--accent);
		opacity: 0.1;
		transform: translateY(-50%);
		z-index: 0;
	}

	.site-title {
		font-size: 4.5rem;
		font-weight: bold;
		color: var(--accent);
		letter-spacing: -2px;
		position: relative;
		z-index: 1;
		display: inline-block;
		background: var(--background);
		padding: 0 2rem;
		margin: 0;
	}

	.site-title::after {
		content: '';
		position: absolute;
		right: -12px;
		top: 50%;
		transform: translateY(-50%);
		width: 8px;
		height: 24px;
		background: var(--accent);
		animation: blink 1s step-end infinite;
	}

	.tagline {
		font-family: 'Space Mono', monospace;
		color: var(--text);
		font-size: 1rem;
		margin-bottom: 2rem;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		opacity: 0.8;
	}

	.separator {
		color: var(--accent);
		font-family: monospace;
		opacity: 0.5;
	}

	.subtitle {
		color: var(--text);
		font-size: 1.2rem;
		font-style: italic;
		opacity: 0.7;
		max-width: 600px;
		margin: 2rem auto 0;
		padding: 1rem;
		position: relative;
	}

	.subtitle::before, .subtitle::after {
		content: '';
		position: absolute;
		width: 40px;
		height: 1px;
		background: var(--accent);
		opacity: 0.3;
		top: 50%;
	}

	.subtitle::before {
		left: 0;
	}

	.subtitle::after {
		right: 0;
	}

	.articles {
		display: grid;
		gap: 2rem;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	}

	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}

		.hero {
			margin: 2rem 0 4rem;
			padding-bottom: 2rem;
		}

		.site-title {
			font-size: 3rem;
			padding: 0 1rem;
		}

		.date-line {
			font-size: 0.8rem;
			gap: 1rem;
			flex-direction: column;
		}

		.tagline {
			font-size: 0.9rem;
			flex-direction: column;
			gap: 0.5rem;
		}

		.separator {
			display: none;
		}

		.subtitle {
			font-size: 1rem;
			padding: 0 2rem;
		}

		.subtitle::before, .subtitle::after {
			width: 20px;
		}
	}
</style>