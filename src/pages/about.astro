<style>
	main {
		max-width: 800px;
		margin: 0 auto;
		padding: 4rem 2rem;
	}

	.about-article {
		position: relative;
	}

	.article-header {
		margin-bottom: 4rem;
		text-align: center;
	}

	.meta {
		color: var(--accent);
		font-family: 'Space Mono', monospace;
		font-size: 0.9rem;
		margin-bottom: 1.5rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	h1 {
		font-size: 3rem;
		line-height: 1.2;
		margin-bottom: 2rem;
		color: var(--text);
		text-shadow: 0 0 20px rgba(0, 255, 102, 0.1);
	}

	.article-content {
		font-size: 0.9rem;
		line-height: 1.6;
		color: var(--text);
	}

	.lead {
		font-size: 1.3rem;
		color: var(--text);
		font-weight: 500;
		border-left: 4px solid var(--accent);
		padding-left: 1rem;
		margin: 2rem 0;
	}

	h2 {
		color: var(--accent);
		font-size: 1.2rem;
		margin: 2rem 0 1rem;
	}

	p {
		margin-bottom: 1.5rem;
		opacity: 0.9;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0 2rem;
	}

	li {
		margin-bottom: 0.5rem;
		padding-left: 1.5rem;
		position: relative;
		opacity: 0.9;
	}

	li::before {
		content: '>';
		position: absolute;
		left: 0;
		color: var(--accent);
	}

	blockquote {
		border-left: 4px solid var(--accent);
		margin: 2rem 0;
		padding-left: 1.5rem;
		font-style: italic;
		position: relative;
	}

	blockquote::before {
		content: '';
		position: absolute;
		left: -4px;
		top: 0;
		bottom: 0;
		width: 4px;
		background: var(--accent);
		animation: glow-line 2s ease-in-out infinite;
	}

	.pgp-key {
		background: var(--secondary);
		padding: 1rem;
		border: 1px solid var(--accent);
		font-family: monospace;
		font-size: 0.8rem;
		overflow-x: auto;
		margin: 1rem 0;
		white-space: pre-wrap;
		word-wrap: break-word;
	}

	.key-fingerprint {
		font-family: monospace;
		color: var(--accent);
		font-size: 0.8rem;
		margin-top: 0.5rem;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin: 2rem 0;
	}

	.value-item {
		background: rgba(26, 26, 26, 0.5);
		padding: 1.5rem;
		border: 1px solid var(--secondary);
		transition: all 0.3s ease;
	}

	.value-item:hover {
		border-color: var(--accent);
		transform: translateY(-2px);
	}

	.value-item h3 {
		color: var(--accent);
		font-size: 1.1rem;
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.value-item h3::before {
		content: '>';
		color: var(--accent);
		font-family: monospace;
	}

	.value-item p {
		font-size: 0.9rem;
		margin: 0;
		opacity: 0.8;
	}

	@keyframes glow-line {
		0%, 100% {
			box-shadow: 0 0 5px var(--accent);
		}
		50% {
			box-shadow: 0 0 15px var(--accent);
		}
	}

	.article-image {
		width: 100%;
		height: 300px;
		margin: 2rem 0;
		position: relative;
		overflow: hidden;
		border-radius: 8px;
		border: 1px solid var(--secondary);
	}

	.cyber-image {
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, #1a1a1a, #2a2a2a);
		position: relative;
		overflow: hidden;
	}

	.cyber-image::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			linear-gradient(45deg, transparent 48%, var(--accent) 50%, transparent 52%),
			linear-gradient(-45deg, transparent 48%, var(--accent) 50%, transparent 52%);
		background-size: 4px 4px;
		opacity: 0.3;
	}

	.glitch-effect {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			transparent 0%,
			rgba(0, 255, 102, 0.2) 50%,
			transparent 100%
		);
		animation: glitch 2s infinite;
		opacity: 0.5;
	}

	.image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(
			circle at center,
			transparent 0%,
			rgba(0, 0, 0, 0.8) 100%
		);
	}

	@keyframes glitch {
		0% {
			transform: translateY(-100%);
		}
		100% {
			transform: translateY(100%);
		}
	}

	.mission::after {
		content: '[ OUR MISSION ]';
		position: absolute;
		bottom: 20px;
		left: 20px;
		color: var(--accent);
		font-family: 'Space Mono', monospace;
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.values::after {
		content: '[ OUR VALUES ]';
		position: absolute;
		bottom: 20px;
		left: 20px;
		color: var(--accent);
		font-family: 'Space Mono', monospace;
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	@media (max-width: 768px) {
		main {
			padding: 2rem 1rem;
		}

		h1 {
			font-size: 2rem;
		}

		.values-grid {
			grid-template-columns: 1fr;
		}
	}
</style>