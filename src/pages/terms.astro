<style>
	main {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem;
	}

	h1 {
		font-size: 2rem;
		margin-bottom: 2rem;
		color: var(--accent);
		text-transform: lowercase;
	}

	.content {
		font-size: 0.9rem;
		line-height: 1.6;
		color: var(--text);
	}

	section {
		margin-bottom: 2.5rem;
	}

	h2 {
		color: var(--accent);
		font-size: 1.2rem;
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	h2::before {
		content: '>';
		color: var(--accent);
		font-family: monospace;
	}

	p {
		margin-bottom: 1rem;
		opacity: 0.9;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0;
	}

	li {
		margin-bottom: 0.5rem;
		padding-left: 1.5rem;
		position: relative;
		opacity: 0.9;
	}

	li::before {
		content: '>';
		position: absolute;
		left: 0;
		color: var(--accent);
		font-family: monospace;
	}

	.pgp-key {
		background: var(--secondary);
		padding: 1rem;
		border: 1px solid var(--accent);
		font-family: monospace;
		font-size: 0.8rem;
		overflow-x: auto;
		margin: 1rem 0;
		white-space: pre-wrap;
		word-wrap: break-word;
	}

	.key-fingerprint {
		font-family: monospace;
		color: var(--accent);
		font-size: 0.8rem;
		margin-top: 0.5rem;
	}

	@media (max-width: 768px) {
		main {
			padding: 1.5rem;
		}

		h1 {
			font-size: 1.8rem;
		}

		h2 {
			font-size: 1.1rem;
		}
	}
</style>