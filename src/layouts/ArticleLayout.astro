---
import Layout from './Layout.astro';

interface Props {
	title: string;
	date: string;
	author?: string;
	readingTime?: string;
	status?: 'live' | 'updated' | 'developing';
}

const { 
	title, 
	date, 
	author = "Anonymous", 
	readingTime = "5 min read",
	status
} = Astro.props;

const statusColors = {
	live: 'var(--danger)',
	updated: 'var(--accent)',
	developing: '#ffaa00'
};

const statusText = {
	live: 'LIVE',
	updated: 'UPDATED',
	developing: 'DEVELOPING'
};

const views = Math.floor(Math.random() * 1000) + 100;
const shareUrl = Astro.url.toString();
const shareText = encodeURIComponent(`${title} | collectif`);
---

<Layout title={`${title} | collectif`}>
	<article class="article">
		<header class="article-header">
			<div class="meta">
				<time datetime={date}>{date}</time>
				<span class="separator">|</span>
				<span class="views-count">
					<span class="views-icon">â—‰</span>
					{views.toLocaleString()} views
				</span>
				<span class="separator">|</span>
				<span class="author">{author}</span>
				<span class="separator">|</span>
				<span class="reading-time">{readingTime}</span>
				{status && (
					<>
						<span class="separator">|</span>
						<span class="status" style={`--status-color: ${statusColors[status]}`}>
							<span class="status-dot"></span>
							{statusText[status]}
						</span>
					</>
				)}
			</div>
			<h1>{title}</h1>
		</header>

		<div class="article-content">
			<slot />
		</div>

		<footer class="article-footer">
			<div class="share-section">
				<h3>SHARE THIS INTEL</h3>
				<div class="share-buttons">
					<a href={`https://twitter.com/intent/tweet?url=${shareUrl}&text=${shareText}`} 
						target="_blank" 
						rel="noopener noreferrer" 
						class="share-btn" 
						title="Share on X">
						<svg viewBox="0 0 24 24" width="24" height="24">
							<path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
					</a>
					<a href={`https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`} 
						target="_blank" 
						rel="noopener noreferrer" 
						class="share-btn" 
						title="Share on LinkedIn">
						<svg viewBox="0 0 24 24" width="24" height="24">
							<path fill="currentColor" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
					<a href={`https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`} 
						target="_blank" 
						rel="noopener noreferrer" 
						class="share-btn" 
						title="Share on Facebook">
						<svg viewBox="0 0 24 24" width="24" height="24">
							<path fill="currentColor" d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
						</svg>
					</a>
					<a href={`https://t.me/share/url?url=${shareUrl}&text=${shareText}`} 
						target="_blank" 
						rel="noopener noreferrer" 
						class="share-btn" 
						title="Share on Telegram">
						<svg viewBox="0 0 24 24" width="24" height="24">
							<path fill="currentColor" d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
						</svg>
					</a>
				</div>
			</div>

			<div class="subscribe-section">
				<h3>STAY INFORMED</h3>
				<p>Subscribe to receive encrypted intel directly to your inbox.</p>
				<form class="subscribe-form">
					<input type="email" placeholder="your@email.com" required>
					<button type="submit">SUBSCRIBE</button>
				</form>
			</div>

			<div class="support-section">
				<h3>SUPPORT OUR MISSION</h3>
				<p class="donate-address">donate (ETH / ERC20): 0x3C5c2F4bCeC51a36494682f91Dbc6cA7c63LLLL</p>
			</div>

			<div class="disclaimer-section">
				<h3>DISCLAIMER</h3>
				<p>collectif serves as a public platform for anonymous authors, we take no responsibility for the views or content hosted on collectif.</p>
				<p>collectif is not responsible or liable in any manner for any Content posted on our Website or in connection with our Services, whether posted or caused by ANON Author of our Website, or by collectif. Although we provide rules for Anon Author conduct and postings, we do not control and are not responsible for what Anon Author post, transmit or share on our Website or Services, and are not responsible for any offensive, inappropriate, obscene, unlawful or otherwise objectionable content you may encounter on our Website or Services. collectif is not responsible for the conduct, whether online or offline, of any user of our Website or Services.</p>
			</div>
		</footer>
	</article>
</Layout>

<style>
	.article {
		max-width: 800px;
		margin: 0 auto;
		padding: 4rem 2rem;
	}

	.article-header {
		margin-bottom: 4rem;
		text-align: center;
	}

	.meta {
		color: var(--text);
		font-family: 'Space Mono', monospace;
		font-size: 0.9rem;
		margin-bottom: 1.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.separator {
		color: var(--accent);
	}

	.status {
		--status-color: var(--accent);
		font-weight: bold;
		text-transform: uppercase;
		letter-spacing: 1px;
		color: var(--status-color);
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.status-dot {
		width: 8px;
		height: 8px;
		border-radius: 50%;
		background-color: var(--status-color);
		display: inline-block;
		animation: status-blink 2s ease-in-out infinite;
	}

	.views-count {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-family: 'Space Mono', monospace;
	}

	.views-icon {
		color: var(--text);
		font-size: 0.8rem;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes status-blink {
		0%, 100% {
			opacity: 1;
			box-shadow: 0 0 8px var(--status-color);
		}
		50% {
			opacity: 0.5;
			box-shadow: 0 0 15px var(--status-color);
		}
	}

	@keyframes pulse {
		0%, 100% {
			opacity: 1;
			text-shadow: 0 0 8px var(--text);
		}
		50% {
			opacity: 0.5;
			text-shadow: 0 0 15px var(--text);
		}
	}

	h1 {
		font-size: 3rem;
		line-height: 1.2;
		margin-bottom: 1rem;
		color: var(--text);
		text-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
	}

	.article-content {
		font-size: 0.9rem;
		line-height: 1.6;
		color: var(--text);
	}

	.article-content :global(h2) {
		color: var(--text);
		font-size: 1.5rem;
		margin: 3rem 0 1.5rem;
	}

	.article-content :global(h3) {
		color: var(--text);
		font-size: 1.2rem;
		margin: 2rem 0 1rem;
	}

	.article-content :global(p) {
		margin-bottom: 1.5rem;
	}

	.article-content :global(blockquote) {
		border-left: 4px solid var(--accent);
		margin: 2rem 0;
		padding-left: 1.5rem;
		font-style: italic;
		position: relative;
	}

	.article-content :global(blockquote::before) {
		content: '';
		position: absolute;
		left: -4px;
		top: 0;
		bottom: 0;
		width: 4px;
		background: var(--accent);
		animation: glow-line 2s ease-in-out infinite;
	}

	.article-footer {
		margin-top: 4rem;
		font-family: 'Space Mono', monospace;
	}

	.article-footer h3 {
		color: var(--text);
		font-size: 1rem;
		margin-bottom: 1rem;
		font-family: 'Space Mono', monospace;
	}

	.share-section {
		margin-bottom: 3rem;
	}

	.share-buttons {
		display: flex;
		gap: 2rem;
	}

	.share-btn {
		color: var(--accent);
		text-decoration: none;
		opacity: 0.8;
		transition: all 0.3s ease;
	}

	.share-btn:hover {
		opacity: 1;
		transform: translateY(-2px);
		color: var(--text);
	}

	.share-btn svg {
		width: 24px;
		height: 24px;
	}

	.subscribe-section {
		margin-bottom: 3rem;
	}

	.subscribe-section p {
		margin-bottom: 1rem;
		opacity: 0.8;
	}

	.subscribe-form {
		display: flex;
		gap: 1rem;
	}

	.subscribe-form input {
		flex: 1;
		padding: 0.8rem;
		background: transparent;
		border: 1px solid var(--accent);
		color: var(--text);
		font-family: 'Space Mono', monospace;
	}

	.subscribe-form button {
		padding: 0.8rem 1.5rem;
		background: var(--text);
		color: var(--background);
		border: none;
		font-family: 'Space Mono', monospace;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.subscribe-form button:hover {
		background: var(--accent);
		box-shadow: 0 0 15px var(--accent);
	}

	.support-section {
		margin-bottom: 3rem;
	}

	.donate-address {
		font-family: 'Space Mono', monospace;
		opacity: 0.8;
		word-break: break-all;
	}

	.disclaimer-section {
		opacity: 0.6;
	}

	.disclaimer-section p {
		font-size: 0.8rem;
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	@keyframes glow-line {
		0%, 100% {
			box-shadow: 0 0 5px var(--accent);
		}
		50% {
			box-shadow: 0 0 15px var(--accent);
		}
	}

	@media (max-width: 768px) {
		.article {
			padding: 2rem 1rem;
		}

		h1 {
			font-size: 2rem;
		}

		.subscribe-form {
			flex-direction: column;
		}

		.share-buttons {
			justify-content: space-between;
		}
	}
</style>